div.container
    div.panel.panel-default
        div.panel-heading
            div.panel-title Data provider
        div.panel-body
            h4 Provider:
            select(
                ng-model='dataProvider.selectedProvider',
                ng-options='provider for provider in dataProvider.providers',
                ng-change='dataProvider.onProviderChange()')
                option(value='') Select provider
    div.row
        div.col-md-3
            h3 Tables
            div.list-group
                a.list-group-item(
                    ng-repeat='table in dataProvider.metaData.Tables',
                    ng-click='dataProvider.selectTable(table.Name)'
                ) {{table.Name}}
        div.col-md-6
            h3 Data
            table.table(ng-repeat='table in dataProvider.metaData.Tables | filter:dataProvider.selectedTableFilter')
                tr
                    th(ng-repeat='field in table.Fields') {{field.Name}}
        div.col-md-3
            h3 Meta data
                h4 Properties
                div.container(ng-repeat='(key, value) in table.Properties')
                    span {{key}}:{{value}}
                h4 Comments
                div.container(ng-repeat='comment in table.Comments')
                    div {{comment.Text}}
