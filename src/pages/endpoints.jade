div.container
    div.row
        div.col-md-2
            h3 Components
            div.list-group
                a.list-group-item(
                    ng-repeat='component in componentList'
                    ng-click="$parent.selectedComponent = component"
                    ng-class="{active: $parent.selectedComponent === component}") {{component}}
        div.col-md-6
            h3 Configuration
            dov.row(ng-repeat="item in componentConfig")
                div.col-md-6 {{ item.Data.Scope.Value[0] }} / {{ item.Name }}
                div.col-md-6
                    input(type="text" ng-model="item.Data.Value.Value[0]")
            button.btn.btn-default(ng-click="endpointController.sendConfig()") Save

        div.col-md-4
            h3 Endpoints
            table.table
                tr
                    th Service type
                    th Socket type
                    th Addresses
                tr(ng-repeat='infoRow in componentInfo')
                    td {{infoRow.SvcType}}
                    td {{infoRow.SocketType}}
                    td {{infoRow.Address}}
