.login-page
  height 100%
  margin 0
  color white
  background-color #3496F1 /* uses a solid blue color at worst */
  //background-image url("../images/login_page_background.png")
  //background radial-gradient(circle at 220px 330px, #3496F1, #266FB7, #061933) no-repeat fixed
