// Hacks for increasing freelancer template ul-s
ul
    font-size 24px

h1 span, h2 span, h3 span, h4 span, h5 span
    color #003f8a

h1, h2, h3, h4, h5
    color #036db9

h3, h4, h5
    text-transform none

a.btn-social
    color #0071bc

p
    text-align justify

.ng-invalid
    border-color red

.provider-list
    box-shadow 0 1px 5px #999999

.filter-container
    margin-bottom 20px
    margin-top 10px
    box-shadow 4px 4px 45px -4px #999999
    position relative
    z-index 1000
    background #fff
    margin-left -1em
    padding 2em
    width calc(100% + 3em)

.button-icon-container
    display inline-block

.button-icon
    height 10px

.triangle
    border-bottom 8px solid #003f8a
    border-left 22px solid transparent
    border-right 0 solid transparent
    height 0
    width 0
    display inline-block

div.header
    background #f0f0f0

div.header h3
    margin 20px 0
    color #3fa9f5
    font-size 26px

.logo
    margin-left 20px

.table-list-icon
    font-size 20px
    line-height 25px

.table-pager
    font-size 30px
    color #FB1155

.fa-right
    margin-right 0
    line-height 1.5

.transparent
    opacity 0

.error
    color #e74c3c 

.switch-cell
    padding-right 10px !important

.switch-with-icon-cell
    padding-right 0px !important
    padding-left 0px !important

