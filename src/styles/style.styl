.selected-component
    background-color #3fa9f5
    border-color #3fa9f5

.user-name
    color #3fa9f5
    font-size 14px
    font-weight bold

.table-users
  margin 10px 0px 10px 0px
  thead
    tr
      background-color #F1EDE8
      th
        text-align left
  tbody
    tr
      background-color #FDFDFD
      border-bottom dotted 1px #474847

.null-value
    font-style italic

.diag-item
    width 100%
    overflow auto
    text-overflow ellipsis
    white-space nowrap

.data-table
    overflow auto

.empty
    color Gray

.disabled
    color #f0f0f0 !important

.provider
    padding 5px
    margin 0 5px 5px

.right-inner-addon
    position relative

.right-inner-addon input
    padding-right 30px
    
.right-inner-addon i
    position absolute
    right 0px
    padding 8px 12px
    pointer-events none        
    font-size 25px

@font-face
  font-family: 'Glyphicons Halflings';
  src: url('../libs/glyphicons-halflings-regular.eot');
  src: url('../libs/glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'), url('../libs/glyphicons-halflings-regular.woff') format('woff'), url('../libs/glyphicons-halflings-regular.ttf') format('truetype'), url('../fonts/glyphicons-halflings-regular.svg#glyphicons_halflingsregular') format('svg');

.main
    color blue

.videowrapper
    position relative
    padding-bottom 56.25%
    padding-top 25p
    height 0

.videowrapper iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.modal-backdrop
    z-index -1

.mermaid-label
    color #18bc9c

.img-circle.icon
    border-style solid
    border-width 1px
    border-color #0071bc

.person-title
    min-height: 45px

